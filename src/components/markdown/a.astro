---
import AnimatedButton from "../animated-button.astro";

const { href } = Astro.props;
const parts = (href as string).split("::");
const url = parts.pop();
const type = parts.shift();

const youTubeId = url?.startsWith("https://www.youtube.com") ? url.match(/v=([^&]+)/)?.[1] : null;
---

{
	type === "btn" ? (
		<AnimatedButton
			link={url}
			target="_blank"
			data={{ istweet: !!url?.includes("twitter.com") ? "" : undefined }}
			itemClasses={["button3 border border-dotted border-secondary text-secondary"]}
		>
			<slot />
		</AnimatedButton>
	) : type === "embed" && youTubeId ? (
		<iframe src={`https://www.youtube.com/embed/${youTubeId}`} class="aspect-video w-full max-w-2xl border-0" allowfullscreen>
			<slot />
		</iframe>
	) : type === "embed-center" && youTubeId ? (
		<iframe
			src={`https://www.youtube.com/embed/${youTubeId}`}
			class="mx-auto aspect-video w-full max-w-2xl border-0"
			allowfullscreen
		>
			<slot />
		</iframe>
	) : url?.startsWith("http") ? (
		<a href={url} target="_blank" rel="noreferrer noopener" class="text-primary">
			<slot />
		</a>
	) : (
		<a href={url} class="mt-0 text-primary">
			<slot />
		</a>
	)
}
