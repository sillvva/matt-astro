---
interface Props {
	username: string;
	displayName: string;
	avatar?: `https://pbs.twimg.com/profile_images/${number}/${string}_400x400.jpg`;
	date: Date;
	link: string;
}

const { username, displayName, avatar, date, link } = Astro.props;

function tweetDate(date: Date) {
	// format like 11:56 AM - Aug 3, 2009
	return `${date.getHours()}:${date.getMinutes()} ${date.getHours() > 12 ? "PM" : "AM"} - ${date.toLocaleString("default", {
		month: "short"
	})} ${date.getDate()}, ${date.getFullYear()}`;
}
---

<div class="mx-auto flex w-full flex-col rounded-lg bg-base-200 px-6 py-4 font-sans">
	<div class="flex items-center">
		<img src={avatar} class="h-12 w-12 rounded-full" />
		<div class="ml-4 flex flex-col">
			<a class="font-bold" href={`https://twitter.com/${username}`}>{displayName}</a>
			<span class="text-gray-500">@{username}</span>
		</div>
		<a href={link} class="ml-auto">
			<svg viewBox="328 355 335 276" height="24" width="24" xmlns="http://www.w3.org/2000/svg">
				<path
					d="    M 630, 425    A 195, 195 0 0 1 331, 600    A 142, 142 0 0 0 428, 570    A  70,  70 0 0 1 370, 523    A  70,  70 0 0 0 401, 521    A  70,  70 0 0 1 344, 455    A  70,  70 0 0 0 372, 460    A  70,  70 0 0 1 354, 370    A 195, 195 0 0 0 495, 442    A  67,  67 0 0 1 611, 380    A 117, 117 0 0 0 654, 363    A  65,  65 0 0 1 623, 401    A 117, 117 0 0 0 662, 390    A  65,  65 0 0 1 630, 425    Z"
					style="fill:#3BA9EE;"></path>
			</svg>
		</a>
	</div>
	<div class="mb-1 mt-3 flex-1 text-lg leading-normal [&>p]:mb-2"><slot /></div>
	<a href={link} class="mb-3 text-sm text-gray-500">
		{tweetDate(date)}
	</a>
</div>
