---
interface Props {
	title?: string;
}

const { title = "Click to Open" } = Astro.props;
---

<details class="collapse collapse-arrow !visible mb-4 border border-base-300 bg-base-200">
	<summary class="collapse-title text-xl font-medium after:top-8">{title}</summary>
	<div class="collapse-content">
		<slot />
	</div>
</details>
