---
import { cn } from "$/util";
import theme from "$/theme.json";
import { Code } from "astro:components";
import { type BundledLanguage } from "shiki";

interface Props {
	code: string;
	lang?: BundledLanguage;
	class?: string;
	wrap?: boolean;
}

const { code, lang, wrap } = Astro.props;
---

<script>
	function copyBlock(el: Element) {
		navigator.clipboard.writeText(el.parentNode?.parentNode?.querySelector("pre")?.innerText || "");
		document.querySelectorAll(".copy").forEach((btn) => {
			btn.innerHTML = "Copy";
			btn.classList.add("bg-gray-700");
			btn.classList.remove("bg-green-700");
		});
		el.innerHTML = "Copied";
		el.classList.remove("bg-gray-700");
		el.classList.add("bg-green-700");
	}

	document.addEventListener("astro:page-load", () => {
		document.querySelectorAll("article .pre-block.shiki").forEach((block) => {
			const btn = block.querySelector(".copy");
			if (btn) btn.addEventListener("click", () => copyBlock(btn));
		});
	});
</script>

<div class="pre-block shiki relative mb-4 mt-2 rounded-md border border-base-100 bg-neutral-900 text-base-content">
	<div
		class={cn(
			"flex items-center justify-between rounded-t",
			"border-b border-base-100 bg-neutral-800",
			"p-2 text-sm group-[.tabbed-code]:py-0"
		)}
	>
		<div class="hidden space-x-1 md:flex">
			<div class="h-2 w-2 rounded-full bg-gray-500"></div>
			<div class="h-2 w-2 rounded-full bg-gray-500"></div>
			<div class="h-2 w-2 rounded-full bg-gray-500"></div>
		</div>
		<div
			class={cn(
				"code-tab hidden h-[44px] border-t border-primary bg-neutral-900",
				"p-3 text-sm group-[.tabbed-code]:block md:ml-3"
			)}
		>
		</div>
		<div class="flex-1"></div>
		<button class="copy rounded-md bg-gray-700 px-2 py-1 text-sm text-white max-sm:hidden" type="button">Copy</button>
	</div>
	<span class="lang">{lang}</span>
	<div class="max-h-[20rem] overflow-y-auto md:max-h-[40rem]">
		<Code
			{code}
			{lang}
			{wrap}
			theme={{
				name: theme.name,
				settings: theme.tokenColors
			}}
			class={cn(
				Astro.props.class,
				"max-w-portfolio group m-0 rounded-lg bg-neutral-900",
				"px-4 py-5 text-sm text-base-content [tab-size:2]"
			)}
		/>
	</div>
</div>
