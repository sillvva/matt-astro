---
import { cn } from "$/util";
import ResponsiveImage from "../responsive-image.astro";
const alt = Astro.props.alt || "";
---

<figure class="mb-6 mt-6 flex flex-col">
	<a
		href={Astro.props.src.src}
		target="_blank"
		rel="noreferrer noopener"
		class={cn("relative mx-auto mb-2 flex w-full max-w-[800px] justify-center", !alt.includes("no-aspect") && "aspect-video")}
	>
		<ResponsiveImage
			src={Astro.props.src}
			alt={alt}
			sizes={[424, 640, 900]}
			class={cn(
				"shadow-md shadow-black/15 motion-safe:hover:shadow-lg motion-safe:hover:shadow-black/25",
				!alt.includes("no-aspect") && "object-cover md:object-contain"
			)}
		/>
	</a>
	<figcaption class="block text-center text-sm text-white/70">Click to open full screen</figcaption>
</figure>
